{
	"name": "taro-picker",
	"version": "1.0.0",
	"description": "基于 Taro 的自定义 Picker 选择器",
	"main": "dist/index.js",
	"types": "./@types/index.d.ts",
	"files": [
		"dist",
		"@types"
	],
	"scripts": {
		"build:weapp": "taro build --type weapp",
		"build:swan": "taro build --type swan",
		"build:alipay": "taro build --type alipay",
		"build:h5": "taro build --type h5",
		"build:rn": "taro build --type rn",
		"build:component": "cross-env TARO_BUILD_TYPE=component taro build --ui",
		"dev:weapp": "yarn build:weapp -- --watch",
		"dev:swan": "yarn build:swan -- --watch",
		"dev:alipay": "yarn build:alipay -- --watch",
		"dev:h5": "yarn build:h5 -- --watch",
		"dev:rn": "yarn build:rn -- --watch",
		"test": "jest --coverage",
		"lint": "eslint src --ext .ts,.tsx --fix",
		"precommit": "yarn build:component",
		"commit": "git add -A && git-cz",
		"push": "git push --tags origin dev",
		"postcommit": "yarn push",
		"release-major": "standard-version -r major",
		"release-minor": "standard-version -r minor",
		"release-patch": "standard-version -r patch"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
			"pre-commit": "yarn lint"
		}
	},
	"author": "Young Luo",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.1.2",
		"@babel/plugin-proposal-class-properties": "^7.1.0",
		"@babel/plugin-transform-react-jsx": "^7.0.0",
		"@babel/preset-env": "^7.1.0",
		"@commitlint/cli": "^7.5.2",
		"@commitlint/config-conventional": "^7.5.0",
		"@tarojs/components": "1.2.16",
		"@tarojs/plugin-babel": "1.2.16",
		"@tarojs/plugin-csso": "1.2.16",
		"@tarojs/plugin-sass": "1.2.16",
		"@tarojs/plugin-uglifyjs": "1.2.16",
		"@tarojs/router": "1.2.16",
		"@tarojs/taro": "1.2.16",
		"@tarojs/taro-alipay": "1.2.16",
		"@tarojs/taro-h5": "1.2.16",
		"@tarojs/taro-swan": "1.2.16",
		"@tarojs/taro-weapp": "1.2.16",
		"@tarojs/webpack-runner": "1.2.16",
		"@types/react": "^16.4.6",
		"@types/sinon": "^5.0.5",
		"@types/webpack-env": "^1.13.6",
		"@typescript-eslint/eslint-plugin": "^1.4.2",
		"babel-core": "^7.0.0-bridge.0",
		"babel-eslint": "^10.0.1",
		"babel-jest": "^23.6.0",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-plugin-transform-decorators-legacy": "^1.3.4",
		"babel-plugin-transform-jsx-stylesheet": "^0.6.5",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"commitizen": "^3.0.7",
		"cross-env": "^5.2.0",
		"cz-conventional-changelog": "^2.1.0",
		"eslint": "^5.15.1",
		"eslint-config-taro": "1.2.16",
		"eslint-plugin-import": "^2.12.0",
		"eslint-plugin-react": "^7.8.2",
		"eslint-plugin-taro": "1.2.16",
		"husky": "^1.3.1",
		"jest": "^23.6.0",
		"lint-staged": "^8.0.3",
		"nerv-server": "^1.3.7",
		"nerv-test-utils": "^1.3.7",
		"nervjs": "^1.3.8",
		"pre-commit": "^1.2.2",
		"regenerator-runtime": "^0.12.1",
		"simulant": "^0.2.2",
		"sinon": "^7.1.0",
		"standard-version": "^5.0.1",
		"typescript": "^3.3.3333"
	},
	"dependencies": {
		"classnames": "^2.2.6",
		"lodash": "^4.17.11",
		"prop-types": "^15.7.2"
	}
}
